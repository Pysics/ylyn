.gallery {
  margin-top: 50px;
}
.wrap {
  position: relative;
  perspective: 700px;
  transform-style: preserve-3d;
}
.wrap > view {
  transition:transform 1000ms ease 0ms;
  position: absolute;
  width:  50%;
}
.wrap image {
  width: 100%;
}
