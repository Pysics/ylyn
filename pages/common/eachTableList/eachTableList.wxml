<!--店铺首页，每桌的用户列表-->

<template name="eachTableList">
  <scroll-view class="container" scroll-x style="width: 100%; white-space: nowrap;">
    <view>
      <block wx:for="{{users}}" wx:key="user_id">
        <view class="item" style="display: inline-block; width: 90px; height: 150px; flex-direction: column; margin-right: 10px; border-radius: 5px; border: 1px solid #eee; box-shadow: 2px 2px 3px rgba(0, 0, 0, .3); position: relative;" bindtap="userTap" data-userinfo="{{item}}" wx:if="{{item.gender !== 0}}">
          <image src="{{item.avatar}}" style="width: 100%; height: 100%; border-radius: 5px;"></image>
          <view style="position: absolute; top: 5px; left: 5px; display: flex; align-items: center; background: rgba(0, 0, 0, .3); border-radius: 50px;">
            <image src="{{item.gender===1 ? '/images/boy.png' : '/images/girl.png'}}" style="width: 20px; height: 20px;"></image>
            <text style="font-size: 12px; color: #fff; padding-left: 3px;">{{item.age}}岁</text>
          </view>
          <!--<text style="display: block; text-align:center">{{item.nick_name}}</text>-->
        </view>
      </block>
    </view>
  </scroll-view>
</template>