.container {
  position: relative;
}

.item .bottom {
  margin-bottom: 10px;
  border-bottom: 1px solid #eee;
}

.scroll {
  height: 100vh;
}

.comments {
  /* height: 1000px; */
  height: 100vh;
}

.comments > view:last-child {
  margin-bottom: 40px;
}

.comments .title {
  border-bottom: 1px solid #eee;
  width: 100%;
  font-size: 20px;
  line-height: 2;
}

.comments .title text {
  color: #777;
  font-size: 16px;
}

.post {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.post textarea {
  padding: 2px;
  margin: 5px 0 3px 5px;
  width: 100%;
  flex: 7;
  border-bottom: 1px solid #eee;
}

.post textarea.overText {
  border-bottom: 1px solid RGB(251, 114, 114);
  /* box-shadow: 1px 0 7px RGB(251,114,114) inset; */
}

.post button {
  flex: 2;
  padding: 0;
  height: 28px;
  border-radius: 2px;
  font-size: 14px;
  margin: 5px;
  align-self: flex-start;
}

.comments .cRow {
  clear: both;
}

.comments .cRow .left {
  width: 50px;
  height: 50px;
  float: left;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.comments .cRow .left image {
  width: 35px;
  height: 35px;
  border-radius: 50%;
}

.comments .cRow .right {
  border-bottom: 1px solid #eee;
  margin-left: 50px;
  /* padding-bottom: 10px; */
}

.comments .cRow .right .cInfo {
  height: 35px;
  display: flex;
  /* justify-content: center; */
  align-items: flex-end;
  flex-direction: row;
}

.comments .cRow .cInfo .author {
  font-size: 14px;
  color: #777;
}

.comments .cRow .cInfo .time {
  font-size: 10px;
  color: #bbb;
  margin-left: 7px;
}

.comments .cRow .cContent {
  color: #222;
  font-size: 13px;
  padding: 15px 0;
}

.commentStatus {
  text-align: center;
  margin-top: 50px;
  color: #777;
  font-size: 14px;
}

.cInContent {
  /* margin: 7px 0 3px; */
  margin-top: 12px;
  padding-left: 7px;
  border-left: 2px solid RGB(255, 193, 7);
  font-size: 11px;
  color: #777;
}
