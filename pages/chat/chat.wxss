/* pages/chat/chat.wxss */

.container {
  position: relative;
  width: 100%;
}

.chatBody {
  /*margin-bottom: 50px;*/
  width: 100%;
  /* padding-top: 20px; */
  background: #eee;
}

.chatBody .item {
  /*height: 100px;*/
}

.chatBody .time {
  text-align: center;
  font-size: 14px;
  width: 50%;
  margin: auto;
  clear: both;
  height: 20px;
  line-height: 20px;
  border-radius: 3px;
  padding:25px 0 10px;
}
.chatBody .time .inner {
  background: rgb(221, 221, 221);
}

.chatBar {
  display: flex;
  flex: 1;
  flex-direction: column;
  width: 100%;
  border-top: 1px solid #bbb;
  position: fixed;
  bottom: 0;
  /*height: 50px;*/
  background: #fff;
}

.chatBar .topBar {
  display: flex;
  flex-direction: row;
}

.chatBar .userCard image {
  width: 25px;
  height: 20px;
}

.chatBar .face image {
  width: 20px;
  height: 20px;
}

.chatBar .pic image {
  width: 20px;
  height: 18px;
}

.userCard, .face, .pic {
  flex: 1;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.inputWrap {
  flex: 4;
}

.chatBar .textarea {
  height: 30px;
  /*height: 37px;*//*line-height: 37px;*/
  width: 100%;
  /*padding-top: 5px;
  padding-bottom: 0;*/
  border-bottom: 1px solid #bbb;
  margin-top: 10px;
  margin-bottom: 10px;
  /*height: 40px!important;*//*line-height: 50px;*//*font-size: 14px;*/
}

.chatBar .submit {
  width: 90%;
  height: 30px;
  line-height: 50px;
  background: rgb(255, 185, 0);
  border-radius: 3px;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  align-self: flex-end;
  margin-top: 10px;
  margin-bottom: 10px;
}

.messageBlock {
  width: 80%;
  margin-top: 17px;
  margin-bottom: 17px;
  min-height: 50px;
  clear: both;
}

.message {
  min-height: 30px;
  padding: 10px;
  border-radius: 7px;
  display: flex;
  max-width: 60%;
  align-items: center;
  position: relative;
  word-break: break-word;
  line-height: 1.5
}

.faceMsg {
  display: flex;
  align-items: center;
  position: relative;
  justify-content: flex-end;
  float: right;
}

.friend .faceMsg {
  float: left;
}

.faceMsg image {
  width: 100px;
  height: 100px;
  padding: 10px;
}

.msgSending {
  float: right;
  padding-right: 3px;
  color: #ccc;
  font-size: 15px;
}

.msgFail {
  float: right;
  padding-right: 3px;
  color: red;
  font-size: 15px;
}

.messageBlock.me image.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  float: right;
}

.messageBlock.me .message {
  float: right;
  color: #000;
  background: #FFB90F;
  margin-right: 15px;
}

.messageBlock.me {
  margin-left: 20%;
  float: right;
  padding-right: 10px;
}

.messageBlock.me .message .angle {
  border: 7px solid #FFB90F;
  border-top-color: transparent;
  border-right-color: transparent;
  border-bottom-color: transparent;
  position: absolute;
  /*为border的两倍*/
  right: -14px;
  top: 10px;
}

.messageBlock.friend image.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  float: left;
}

.messageBlock.friend .message {
  float: left;
  background: #fff;
  margin-left: 15px;
}

.messageBlock.friend {
  margin-right: 20%;
  float: left;
  padding-left: 10px;
}

.messageBlock.friend .message .angle {
  border: 7px solid #fff;
  border-top-color: transparent;
  border-left-color: transparent;
  border-bottom-color: transparent;
  position: absolute;
  /*为border的两倍*/
  left: -14px;
  top: 10px;
}

.messageBlock .imgMsg {
  max-width: calc(100% - 70px);
}

.faceContent {
  height: 150px;
  opacity: 1;
  background: #fff;
}

.faceContent .faceSwiper, .faceContent .faceSwiper .page1,
.faceContent .faceSwiper .page2 {
  height: 150px;
}

.faceContent .faceSwiper .page1, .faceContent .faceSwiper .page2 {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.faceContent .row {
  height: 75px;
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
}

.faceContent .row .item {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.faceContent .row image {
  width: 50px;
  height: 50px;
  /* flex: 1; */
  /* width: 77%; */
  /* height: 77%; */
  /*padding: 7px;*//*transform: scale(0.7);*/
  /* padding: 7px; */
}

.faceImg {
  width: 27px;
  height: 27px;
}

.multMsg {
  display: flex;
  align-items: center;
}

.shield {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  height: 20px;
  line-height: 20px;
  padding-left: 10px;
  z-index: 999;
  /*padding-right: 10px;*/
}

.shield .outer {
  font-size: 16px;
  height: 20px;
}

.shield .inner {
  color: red;
  text-decoration: underline;
  float: left;
}

.shield image {
  width: 12px;
  height: 12px;
  position: absolute;
  right: 20px;
  top: 4px;
}

.shieldMsg {
  text-align: center;
  font-size: 14px;
  width: 50%;
  margin: 0 auto;
  background: rgb(221, 221, 221);
  clear: both;
  height: 20px;
  line-height: 20px;
  border-radius: 3px;
}
