/* pages/chat/chat.wxss */

.container {
  /*position: relative;*/
}
.chatBody {
  /*margin-bottom: 50px;*/
}
.chatBody .item {
  height: 100px;
}


.chatBar {
  display: flex;
  flex: 1;
  flex-direction: column;
  width: 100%;
  border-top: 1px solid #bbb;
  position: fixed;
  bottom: 0;
  height: 50px;
}
.chatBarContent {
  flex-direction: row;
  display: flex;
  flex: 1;
  height: 50px;
  position: absolute;
  bottom: 0;
  width: 100%;
}
.chatBar .fa {
  font-size: 30px;
  line-height: 50px;
  color: #222;
}
.userCard, .face, .pic {
  flex: 1;
  text-align: center;
}
.inputWrap {
  flex: 4;
}
.chatBar .input {
  height: 40px;
  padding-top: 5px;
  padding-bottom: 0;
  border-bottom: 1px solid #bbb;
}
.chatBar .submit {
  padding: 7px 5px;
  height: 50px;
  line-height: 50px;
  background: green;
  border-radius: 3px;
  color: #fff;
}
.messageBlock {
  width: 80%;
  margin-top: 17px;
  margin-bottom: 17px;
}
.message {
  min-height: 30px;
  padding: 10px;
  border-radius: 7px;
  position: relative;
  max-width: 70%;
}

.messageBlock.me image.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  float: right;
}
.messageBlock.me .message {
  float: right;
  background: rgb(69, 155, 253);
  margin-right: 20px;
}
.messageBlock.me {
  margin-left: 20%;
  float: right;
  padding-right: 10px;
}
.messageBlock.me .message .angle {
  border: 7px solid rgb(69, 155, 253);
  border-top-color: transparent;
  border-right-color: transparent;
  border-bottom-color: transparent;
  position: absolute;
  /*为border的两倍*/
  right: -14px;
  top: 10px;
}

.messageBlock.friend image.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  float: left;
}
.messageBlock.friend .message {
  float: left;
  background: #eee;
  margin-left: 20px;
}
.messageBlock.friend {
  margin-right: 20%;
  float: left;
  padding-left: 10px;
}
.messageBlock.friend .message .angle {
  border: 7px solid #eee;
  border-top-color: transparent;
  border-left-color: transparent;
  border-bottom-color: transparent;
  position: absolute;
  /*为border的两倍*/
  left: -14px;
  top: 10px;
}

.messageBlock .message image {
  max-width: 100%;
}

.faceContent {
  height: 134px;
}
.faceDivision {
  width: 0%;
  height: 1px;
  background: #ccc;
}

.faceContent .faceSwiper,
.faceContent .faceSwiper .page1,
.faceContent .faceSwiper .page2 {
  height: 134px;
}
.faceContent .faceSwiper .page1,
.faceContent .faceSwiper .page2 {
  display: flex;
  flex: 1;
  flex-direction: column;
}
.faceContent .row {
  height: 54px;
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
}
.faceContent .row image {
  flex: 1;
  width: 100%;
  height: 100%;
  /*padding: 7px;*/
}

.faceImg {
  width: 27px;
  height: 27px;
}

.multMsg {
  display: flex;
  align-items: center;
}