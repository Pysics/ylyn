/* pages/shopDetail/shopDetail.wxss */

.container {
  position: relative;
  background: #eee;
}

.banner {
  position: relative;
  height: 130px;
  overflow: hidden;
}

.banner .wrap {
  position: relative;
}

.banner .bannerBg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  opacity: 0.3;
}

.shopBanner {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 130px;
  overflow: hidden;
}

.shopBanner .shopAvatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  position: relative;
  top: -10px;
}

.shopBanner .shopAvatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.shopBanner .shopName, .userBanner .shopName {
  color: #222;
  font-weight: bold;
  font-size: 22px;
  margin-top: 7px;
}

/*活动标签*/

.inSales {
  position: absolute;
  right: -25px;
  top: -25px;
  background: rgb(255, 150, 0);
  /*padding: 10px;*/
  width: 50px;
  height: 50px;
  padding-bottom: 0;
  transform: rotate(45deg);
  z-index: 999;
}

.inSales .inSaleText {
  position: absolute;
  bottom: 0;
  left: 14px;
  color: #fff;
  font-size: 12px;
  font-weight: bold;
}

.userCount {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 50px;
  background: #fff;
}

.userCount .total, .userCount .man, .userCount .female {
  flex: 1;
  text-align: center;
  font-size: 12px;
  color: #ccc;
}

.userCount .total, .userCount .man {
  border-right: 1px solid #eee;
}

.userCount .num {
  font-size: 20px;
  display: block;
  color: #222;
  font-weight: bold;
  margin-bottom: 3px;
}

.shopInfo {
  margin-top: 10px;
  background: #fff;
  padding: 10px 0;
}

.shopInfo {
  padding-bottom: 0;
}

.shopInfo .row {
  /*display: flex;
  flex-direction: row;*//*width: 100%;*/
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid #eee;
  clear: both;
  margin-left: 10px;
  margin-right: 10px;
}

.iconWrap {
  line-height: 50px;
  width: 10%;
  /*margin-right: 10px;*/
  float: left;
  text-align: left;
}

.shopInfo .fa {
  font-size: 24px;
  color: #777;
  /* text-align:center; */
}

.shopInfo text {
  font-size: 14px;
  line-height: 50px;
}

.shopInfo .address {
  width: 80%;
  float: left;
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis;
}

