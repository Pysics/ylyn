.arrowWrap {
  width: 10%;
  float: right;
  text-align: center;
  height: 50px;
}

.iconRight {
  /*flex: 1;*/
  width: 7px;
  height: 11px;
  line-height: 50px;
  /* font-size: 20px !important; */
}

.foods {
  margin: 0 10px;
}

.foods .hd {
  height: 50px;
  line-height: 50px;
}

.foods .hd .iconLeft {
  /* width: 20px;
  height: 11px;
  top: 0; */
}

.foods .hd .arrowWrap .iconRight {
   transform: rotate(90deg); 
  /* transform-origin: 50% 50%; */
}

.foods .bd {
  overflow: hidden;
  clear: both;
}

.foods .bd:after {
  content: '.';
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}

.foods .item {
  float: left;
  margin-bottom: 10px;
}

.foods .item:nth-child(1), .foods .item:nth-child(2) {
  margin-top: 2px;
}

.foods .itemLeft {
  margin-right: 7px;
}

.foods .item image {
  width: calc(100% - 10px);
  padding: 5px;
  /* border: 1px solid #ccc; */
  background-color: #fff;
  border-radius: 2px;
  box-shadow: 2px 1px 3px rgba(0, 0, 0, 0.3);
}

.foods .item .info {
  /* display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center; */
  width: 100%;
}

.foods .item .info text {
  font-size: 14px;
  text-align: center;
}

.foods .item .info .name {
  width: 60%;
  float: left;
}

.foods .item .info .price {
  color: #d13438;
  padding-left: 5px;
  max-width: 37%;
}

.inSalesInfo {
  margin: 0 10px;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}

.inSalesInfo .iconWrap {
  /*padding-top: 10px;*/
  line-height: 14px;
  width: 10%;
}
.inSalesInfo .iconWrap .fa {
  line-height: 1;
  font-size: 24px;
}

.inSalesInfo .iconWrap image {
  padding-left: 10px;
}

.inSalesInfo:after {
  display: block;
  content: ".";
  visibility: hidden;
  height: 0;
  clear: both;
}

.inSalesInfo .content {
  width: 90%;
  float: left;
  /* padding-bottom: 17px; */
  line-height: 2;
  font-size: 14px;
}

.inSalesInfo .content text {
  display: block;
  height: 40px;
  line-height: 40px;
}

.customPic {
  margin-top: 10px;
}

.customPic image {
  width: 100%;
}

.customPic image:last-child {
  /* 去掉最底下的白色间隙 */
  margin-bottom: -5px;
}

.quit {
  position: fixed;
  left: 17px;
  bottom: 17px;
  background: #ac2925;
}

.toHere {
  position: fixed;
  right: 17px;
  bottom: 17px;
  z-index: 999;
  background: #286090;
}

.quit, .toHere {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 11px;
  color: #fff;
  box-shadow: 1px 2px 3px rgba(0, 0, 0, .3)
}

.quit .fa, .toHere .fa {
  font-size: 20px;
}

.share {
  position: absolute;
  top: 10px;
  left: 10px;
  z-index: 999;
}

.shareWrap {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-content: center;
  height: 100%;
}

.shareWrap .block {
  display: flex;
  align-self: center;
  justify-content: center;
  flex-direction: column;
  /* border-radius: 3px; *//* box-shadow: 0 0 10px rgba(0, 0, 0, .3); */
  position: relative;
  transform: scale(0);
}

.shareWrap .block .bg {
  width: 100%;
  height: 100%;
}

.shareWrap .block .content {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-content: center;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  color: #fff;
  font-size: 12px;
}

.shareWrap .block .content .line1 {
  line-height: 2;
}

.shareWrap .block .btn {
  width: 100px;
  height: 40px;
  line-height: 40px;
  position: absolute;
  bottom: 10px;
}

.shareWrap .block .btn button {
  width: 100px;
  height: 40px;
  line-height: 40px;
  color: #000;
  background: #fff;
  border: 2px solid #fff;
  border-radius: 2px;
}

.shareWrap .block .close {
  width: 20px;
  height: 20px;
  position: absolute;
  top: 50px;
  right: 50px;
}
