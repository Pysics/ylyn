<!--pages/user/user.wxml-->

<view class="container">
  <view class="banner">
    <view class="userBanner">
      <image class="bannerImg" src="/images/banner.png"></image>
      <view class="userAvatar" bindtap="changeAvatar">
        <image src="{{userInfo.avatar}}"></image>
      </view>
      <view class="userName">
        <view class="line"></view>
        <view class="dot"></view>
        <text>{{userInfo.nickname}}</text>
        <view class="dot"></view>
        <view class="line"></view>
      </view>
      <view class="bottomText">{{userInfo.introduction}}</view>
      <view class="flipConner"  bindtap="switchToShop">
        <image class="flipConnerImg" src="/images/flipConner.png"></image>
        <text class="flipConnerText">首页</text>
      </view>
    </view>
  </view>

  <view class="galleryHD">
    <image src="/images/xc.png"></image>
    <text>个人展示</text>
  </view>
<view class="gallery">
  <view class="wrap s0" wx:if="{{size === 0}}">
    <text>空空如也</text>
  </view>
  <view class="wrap s1" wx:if="{{size === 1}}">
    <image src="/images/man.jpg"></image>
  </view>
  <view class="wrap s2" wx:if="{{size === 2}}">
    <image src="/images/man.jpg"></image>
    <image src="/images/female.jpg"></image>
  </view>
  <view class="wrap" wx:if="{{size > 2}}">
    <!--<block wx:for="{{gallery}}">
      <view class="item item{{index}}" animation="{{'animation' + index}}" bindtap="{{'tap' + index}}">
        <image src="{{item}}"></image>
      </view>
    </block>-->
    <view class="g0" wx:if="{{size > 1}}" style="transform: translateX({{tx0}}%) translateZ({{currentPic===0 ? '100px' : '0px'}})">
      <image src="{{gallery[0]}}"></image>
    </view>
    <view class="g1" wx:if="{{size > 2}}" style="transform: translateX({{tx1}}%) translateZ({{currentPic===1 ? '100px' : currentPic===0 ? '1px': '0px'}})">
      <image src="{{gallery[1]}}"></image>
    </view>
    <view class="g2" wx:if="{{size > 3}}" style="transform: translateX({{tx2}}%) translateZ({{currentPic===2 ? '100px' : currentPic===1 ? '1px': '0px'}})">
      <image src="{{gallery[2]}}"></image>
    </view>
    <view class="g3" wx:if="{{size > 4}}" style="transform: translateX({{tx3}}%) translateZ({{currentPic===3 ? '100px' : currentPic===2 ? '1px': '0px'}})">
      <image src="{{gallery[3]}}"></image>
    </view>
    <view class="g4" wx:if="{{size > 5}}" style="transform: translateX({{tx4}}%) translateZ({{currentPic===4 ? '100px' : currentPic===3 ? '1px': '0px'}})">
      <image src="{{gallery[4]}}"></image>
    </view>
    <view class="g5" wx:if="{{size > 6}}" style="transform: translateX({{tx5}}%) translateZ({{currentPic===5 ? '100px' : currentPic===4 ? '1px': '0px'}})">
      <image src="{{gallery[5]}}"></image>
    </view>

    
    <view bindtap="prev" id="prev" wx:if="{{size>2 && currentPic !== 0}}"></view>
    <view bindtap="next" id="next" wx:if="{{size>2 && currentPic !== size-2}}"></view>
  </view>
</view>

<view class="bottom">
  <view class="btn" bindtap="toChatOrConfig" data-friendinfo="{{userInfo}}" data-storeid="{{storeId}}">
    <text>{{userId===userInfo.user_id ? '修改资料' : '开始聊天'}}</text>
  </view>
</view>

</view>