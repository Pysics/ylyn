.container {
  position: relative;
}

.banner {
  transform-style: preserve-3d;
  position: relative;
  height: 170px;
  perspective: 300px;
  /*transform: scale(0.7);*/
}

.banner .bannerImg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.3;
  width: 100%;
  height: 100%;
}
.shopName {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.shopName .line {
  width: 30px;
  height: 2px;
  background: #333;
}
.shopName .dot {
  width: 5px;
  height: 5px;
  border-radius: 50%;
  background: #333;
  margin: 0 3px 0 3px;
}
.shopName text {
  margin-left: 17px;
  margin-right: 17px;
  font-weight: bold;
  font-size: 20px;
}

.bottomText {
  font-size: 14px;
  color: #ccc;
  margin-top: 15px;
}

.shopBanner {
  backface-visibility: hidden;
}

.userBanner {
  transform-style: preserve-3d;
  transform-origin: 0;
  transform: rotateY(180deg);
  backface-visibility: hidden;
}

.shopBanner, .userBanner {
  background: transparent;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height: 170px;
  overflow: hidden;
}

.shopBanner .shopAvatar, .userBanner .shopAvatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  position: relative;
  /*top: -10px;*/
  /*z-index: 99;*/
  margin-bottom: 10px;
}

.shopBanner .shopAvatar image, .userBanner .shopAvatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.shopBanner .shopName, .userBanner .shopName {
  /*color: #fff;*/
}

.shopBanner .flipConner, .userBanner .flipConner {
  position: absolute;
  bottom: -1px;
  width: 50px;
  height: 50px;
  /*z-index: 999;*/
}

.shopBanner .flipConnerImg, .userBanner .flipConnerImg {
  width: 100%;
  height: 100%;
}

.shopBanner .flipConnerText, .userBanner .flipConnerText {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 12px;
  font-weight: bold;
  transform: rotate(-45deg);
  padding-bottom: 7px;
}

.body {
  /*border: 1px solid red;*/
  top: 170px;
  position: absolute;
  opacity: 1;
}

.allInOne {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-top: 15px;
}

.allInOne .up {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.allInOne .up .big {
  font-weight: bold;
}
.allInOne .down text {
  font-size: 12px;
  color: #ccc;
  margin-top: 7px;
}

.allInOne .line {
  width: 30px;
  height: 1px;
  background: #ccc;
  margin: 0 7px;
}

.userShow {
  opacity: 0;
  position: absolute;
  width: 100%;
}

.userShow .title {
  margin-top: 20px;
  margin-left: 15px;
}
.userShow .title {
  padding-left: 10px;
}

.userShow swiper {
  width: 100%;
  text-align: center;
  margin-top: 17px;
}

.userShow swiper swiper-item {
  width: 33.33% !important;
}
.userShow swiper swiper-item image {
  width: 100%
}

.userShow .gallery {
  position: relative;
  /*backface-visibility: hidden;*/
  transform-style: preserve-3d;
  perspective: 500px;
  /*perspective-origin: 50%;*/
}
