  <view class="toolBar" wx:if="{{shopShow}}">
    <view class="message" bindtap="toChatRecords">
      <image src="/images/message.png"></image>
      <text>消息列表</text>
      <view class="msgStatus" wx:if="{{hasNewMsg}}"></view>
    </view>


    <view class="middleWrap" style="z-index: 1;">
      <view class="fa fa-plus" wx:if="{{!filterShow}}" bindtap="showFilter"></view>
      <image src="/images/all.png" wx:if="{{filterShow}}" bindtap="showFilter"></image>
    </view>

    <view class="filter" style="z-index: 0;" animation="{{filterShowAnimation}}">
      <view class="showGirl">
        <image src="/images/show_girl.png"></image>
        <text>只看女生</text>
      </view>
      <view class="showBoy">
        <image src="/images/show_boy.png"></image>
        <text>只看男生</text>
      </view>
    </view>

    <view class="waiter">
      <image src="/images/waiter.png"></image>
      <text>呼叫维特</text>
    </view>
  </view>

</view>
