          <text class="flipConnerText">首页</text>
        </view>
      </view>-->

    </view>

  </view>

  <scroll-view scroll-y="true" class="body" style="height: {{ deviceInfo.windowHeight-130-50 }}px;" animation="{{tablesOpacityAnimation}}">
    <view class="allInOne">
      <view class="up">
        <view class="line"></view>
        <text class="big">同店的人</text>
        <view class="line"></view>
      </view>
      <view class="down">
        <text class="small">在这里找到你心动的ta</text>
      </view>
    </view>
    <view class="empty" wx:if="{{userListLength === 0}}">暂时为空</view>
    <import src="/pages/common/tableList/tableList" />
    <template is="tableList" data="{{tables: store.table_list, tableLength: userListLength}}" />
  </scroll-view>



  <!--<view class="userShow" animation="{{userOpacityAnimation}}">
    <view class="title">
      <text class="fa fa-picture-o">个人展示</text>
    </view>

    <view class="gallery">
    </view>

    <view class="swiper">
      <swiper current="1" bindchange="galleryImgChange">
        <block wx:for="{{gallery}}">
          <swiper-item>
            <image src="{{item.src}}" bindtap="galleryImgPrev" data-src="{{item.src}}"></image>
          </swiper-item>
