page {
    height: 100%;
}

.noWrap {
    display: block;
    white-space: nowrap; /* 不换行 */
    overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
    text-overflow: ellipsis;
}

/* login */

.cssload-container {
    width: 100%;
    height: 49px;
    text-align: center;
}

.cssload-speeding-wheel {
    width: 17px;
    height: 17px;
    margin: 0 auto;
    border: 1px solid rgb(0, 0, 0);
    border-radius: 50%;
    border-left-color: transparent;
    border-right-color: transparent;
    animation: cssload-spin 575ms infinite linear;
}

@keyframes cssload-spin {
    100% {
        transform: rotate(360deg);
        transform: rotate(360deg);
    }
}

/* main & nearlist 错误页面 */

.occurFail {
    width: 200px;
    height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.occurFail image {
    width: 100px !important;
    height: 100px !important;
}

.resolveTip {
    margin-top: 20px;
    font-size: 14px;
    /* background: #eee; */
    padding: 20px;
    color: #777;
    max-width: 70%;
}

.resolveTip > view {
    line-height: 1.8;
}

.resolveTip .title {
    font-weight: bold;
    margin-bottom: 7px;
}

/* 通用错误刷新页面 */

.occurCommonFail {
    display: flex;
    align-items: center;
    flex-direction: column;
    height: 100%;
}

.occurCommonFail image {
    width: 100px;
    height: 100px;
    margin: 50px 0 30px;
}

/* 数据载入显示 */

.loadingData {
    margin-top: 50px;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

.loadingData image {
    width: 100px;
    height: 100px;
}

.loadingData text {
    margin-top: 20px;
}

